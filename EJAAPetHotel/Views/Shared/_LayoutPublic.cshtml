<!DOCTYPE html>
<html lang="es-MX">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cuidados Los Patitos</title>
    <link rel="icon" href="~/favicon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Public/normalize.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Public/global.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Public/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Public/especialistas.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Public/habitaciones.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Public/acerca.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Public/contactenos.css" asp-append-version="true" />
    @if (@ViewData["Title"].Equals("Reservaciones"))
    {
        <link rel="stylesheet" href="~/css/Public/reservaciones.css" asp-append-version="true" />
    }
    @if (@ViewData["Title"].Equals("Inicio de sesión") || @ViewData["Title"].Equals("Registro"))
    {
        <link rel="stylesheet" href="~/css/Public/crearcuenta.css" asp-append-version="true" />
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-lg bg-negro">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="PetHotel" asp-action="Index">
                    <img class="logo-img" src="~/img/Public/icon.png" alt="Logo Cuidados Los Patitos" width="70">
                </a>
                <button class="navbar-toggler navbar-toggler-custom" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa-solid fa-bars" style="color: #cf9c02;"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-1 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-controller="PetHotel" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PetHotel" asp-action="About">Acerca</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PetHotel" asp-action="Specialist">Especialistas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PetHotel" asp-action="Rooms">Habitaciones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PetHotel" asp-action="Contact">Contactenos</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-user" style="color: #FFF;"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    @if(User.IsInRole("4")){
                                        <li><a class="dropdown-item" asp-controller="PetHotel" asp-action="Reservation">Reservaciones</a></li>
                                        <li><a class="dropdown-item" asp-area="Accounts" asp-controller="Public" asp-action="Close">Cerrar Sesión</a></li>
                                    }
                                    else
                                    {
                                        <li><a class="dropdown-item" asp-controller="PetHotel" asp-action="Login">Iniciar Sesión</a></li>
                                        <li><a class="dropdown-item" asp-controller="PetHotel" asp-action="Register">Crear Cuenta</a></li>
                                    }
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <main>
        @RenderBody()
    </main>

    <footer class="bg-negro">
        <div class="footer-follow-container">
            <p>Siguenos en instagram <i class="fab fa-instagram"></i> &#64cuidadoslospatitos</p>
            <hr>
        </div>
        <div class="footer-info-container">
            <div class="footer-img-container">
                <img src="~/img/Public/icon.png" class="borde-suave" alt="Cuidados Los Patitos S.A">
            </div>
            <div class="footer-info-items">
                <h4>Nuestros Servicios</h4>
                    <a  asp-controller="PetHotel" asp-action="Specialist">Especialistas</a>
                    <a  asp-controller="PetHotel" asp-action="Rooms">Habitaciones</a>
            </div>
            <div class="footer-info-items">
                <h4>Acerca de Nosotros</h4>
                    <a asp-controller="PetHotel" asp-action="About">Acerca</a>
                <a href="#">Instagram</a>
            </div>
            <div class="footer-info-items">
                <h4>Contáctenos</h4>
                 <a  asp-controller="PetHotel" asp-action="Contact">Contactenos</a>
            </div>
        </div>
        <div class="footer-copy-container">
            <small>Copyright 2023 ©. Cuidado Los Patitos SA. All right reserved.</small>
        </div>
    </footer>
    @if (ViewData["Title"].Equals("Acerca"))
    {
        <script src="~/js/Public/acerca.js"></script>
    }
    <script src="~/js/Public/main.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/16aeb5d585.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
 