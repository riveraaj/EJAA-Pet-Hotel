@model IEnumerable<PetHotel.Areas.Rooms.Models.Room>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Habitaciones";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="myContainer">
    <div class="table__wrapper">
        <h1 class="title">Control de Habitaciones</h1>
        <table>
            <thead>
                <tr>
                    <th scope="col">Habitacion</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Tipo de Habitación</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table__row">
                        <td data-label="Habitación">
                            <p>@item.RoomId</p>
                        </td>
                        <td data-label="Estado">
                            <p>@item.RoomStatus.RoomStatusDescription</p>
                        </td>
                        <td data-label="Tipo de Habitación">
                            <p>@item.RoomType.RoomTypeDescription</p>
                        </td>
                    </tr>
                }
               
            </tbody>
        </table>
    </div>
</div>