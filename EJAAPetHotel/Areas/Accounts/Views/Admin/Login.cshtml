@model PetHotel.Areas.Employees.Models.Employee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_LayoutAdminLogin.cshtml";
}

<div class="form__wrapper">
    <div class="form">
        <img src="~/img/Admin//Logo.png" alt="">
        <h2>Inicio de Sesión</h2>
        <form asp-area="Accounts" asp-controller="Admin" asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <label asp-for="PersonId">Usuario</label>
            <input asp-for="PersonId" type="number">
            <span asp-validation-for="PersonId" class="text-danger"></span>
            <br />
            <label asp-for="Password">Contraseña</label>
            <input asp-for="Password" type="password">
            <span asp-validation-for="Password" class="text-danger"></span>
            <br />
            <div>
                <span class="text-danger">@ViewData["LoginError"]</span>
                <br />
            </div>
            <br />
            <input type="submit" value="Iniciar Sesión" />
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}